<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="scheduler.wgu.mywguscheduler">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyWGUScheduler">
        <activity android:name=".UI.CourseDetailActivity"
            android:label="Course Details"
            android:parentActivityName=".UI.CoursesActivity"/>
        <activity
            android:name=".UI.TermDetailActivity"
            android:label="Term Details"
            android:parentActivityName=".UI.TermsActivity" />
        <activity
            android:name=".UI.AddTermActivity"
            android:label="Add Term"
            android:parentActivityName=".UI.TermsActivity" />
        <activity
            android:name=".UI.AddInstructorActivity"
            android:label="Add Instructor"
            android:parentActivityName=".UI.InstructorActivity" />
        <activity
            android:name=".UI.AddCourseActivity"
            android:label="Add Course"
            android:parentActivityName=".UI.CoursesActivity" />
        <activity
            android:name=".UI.AddAssessmentActivity"
            android:label="Add Assessment"
            android:parentActivityName=".UI.AssessmentActivity" />
        <activity
            android:name=".UI.TermsActivity"
            android:label="Terms"
            android:parentActivityName=".UI.MainActivity" />
        <activity
            android:name=".UI.InstructorActivity"
            android:label="Instructors"
            android:parentActivityName=".UI.MainActivity" />
        <activity
            android:name=".UI.CoursesActivity"
            android:label="Courses"
            android:parentActivityName=".UI.MainActivity" />
        <activity
            android:name=".UI.AssessmentActivity"
            android:label="Assessments"
            android:parentActivityName=".UI.MainActivity" />
        <activity android:name=".UI.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>